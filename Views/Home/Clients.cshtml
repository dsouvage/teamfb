@model IEnumerable<teamfb.Models.Clients>
@{
    ViewBag.Title = "Clientele";
}
@Styles.Render("~/Content/Clients")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<div class="container-fluid pt-4">
    <div class="row">
        <div class="col-1 pl-4">
            <h3>Clients</h3>
        </div>
        <div class="col">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#clientModal">Create Client</button>
        </div>
    </div>
</div>
<br />
<!-- Create Client Modal -->
<div class="modal fade bd-example-modal-lg" data-backdrop="static" tabindex="-1" id="clientModal" tabindex="-1" role="dialog" aria-labelledby="clientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <form class="form-signin" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="clientModalLabel">Create Client</h5>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="inputFirstName" class="sr-only">Full Name</label>
                        <input type="text" id="FullName" name="FullName" class="form-control" placeholder="Full Name" required="">
                    </div>
                    <div class="form-group">
                        <label for="inputPhoneNumber" class="sr-only">Phone Number</label>
                        <input type="tel" id="phone" name="Phone" class="form-control" placeholder="Phone Number" required="">
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="sr-only">Email address</label>
                        <input type="email" id="inputEmail" name="Email" class="form-control" placeholder="Email address" required="">
                    </div>
                    <div class="form-group">
                        <label for="Date" class="sr-only">Date</label>
                        <input type="date" id="Date" name="Date" class="form-control" placeholder="Date" required="" autofocus="">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <table class="table table-hover table-fixed">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Created Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null)
            {
                <p>Not signed in</p>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfTransaction)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
