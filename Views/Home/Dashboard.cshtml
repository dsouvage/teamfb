@model teamfb.Models.DashboardModel

@using Newtonsoft.Json
@{
    ViewBag.Title = "Dashboard";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4"></script>
<div class="row">
    <div class="card-title">
        <div>
            <h2 class="dashboard-welcome">Welcome back, John!</h2>
        </div>
    </div>
</div>
<div class="row text-center">
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">0</h5>
            </div>
            <div class="card-header">
                <p class="card-text">Unfulfilled Orders</p>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">0</h5>
            </div>
            <div class="card-header">
                <p class="card-text">Pending Orders</p>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">0</h5>
            </div>
            <div class="card-header">
                <p class="card-text">Total Orders</p>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">0</h5>
            </div>
            <div class="card-header">
                <p class="card-text">Unread Messages</p>
            </div>
        </div>
    </div>
</div>
<div class="row pt-5 text-center">
    <div class="col-sm-9">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title text-left">Sales</h5>
            </div>
            <div class="card-body">
                <canvas id="chartjs-1"></canvas>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title text-left">Notes</h5>
            </div>
            <div class="card-body">
                <div class="note">
                    <p class="card-text">Start order #74927</p>
                </div>
                <div class="note">
                    <p class="card-text">Call Jane regarding product color.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var data = @Html.Raw(JsonConvert.SerializeObject(Model));

    console.log(data);

    var labels = data.data.labels;
    var quantities = data.data.datasets.data;

    new Chart(document.getElementById("chartjs-1"),
    {
        "type": "bar",
        "data": {
                "labels": labels,
            "datasets": [{
                "data": quantities,
                "fill": false,
                "backgroundColor": [],
                "borderColor": [],
                "borderWidth": 1
            }]
        }, "options": {
            "legend": {
                "display": false
            },
                "scales": {
                    "yAxes": [
                        {
                            "ticks": {
                                "beginAtZero": true
                            }
                        }]
                }
        }
    });

</script>