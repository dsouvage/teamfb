@model IEnumerable<teamfb.Models.Document>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Documents";
}
@Styles.Render("~/Content/Clients")
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<!-- Example taken from https://codepen.io/gungorbudak/pen/ooKNpz -->
<div class="form-group has-search form-inline">
    <span class="fa fa-search form-control-feedback pr-3"></span>
    <input type="text" class="form-control" placeholder="Search Documents">
    <div class="dropdown pl-3">
        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
            Sort By
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Newest</a>
            <a class="dropdown-item" href="#">Oldest</a>
        </div>
    </div>
</div>

<!--Image Gallery-->
<table class="table table-hover table-fixed">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                
            </th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <p>Not signed in</p>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @using (Html.BeginForm("GetFile", "MyController", FormMethod.Get))
                        {
                            @Html.HiddenFor(modelItem => item.BusinessAcountID)

                            <input type="submit" class="btn btn-primary custom" value="Derivate Material" />
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<form class="form-signin" method="post" enctype="multipart/form-data">
    <input type="file" name="Data" id="fileToUpload">
    <input type="submit" value="Upload Image" name="submit">
</form>